{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"typeRoots": ["node_modules/@types", "src/Types"],
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "client", "dist"]
}
