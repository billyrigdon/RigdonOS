{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"jsx": "react",
		"outDir": "./dist",
		"rootDir": "./",
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"typeRoots": ["node_modules/@types", "src/Types"],
		"esModuleInterop": true
	},
	"include": ["src/**/*", "electron/main.ts"],
	"exclude": ["node_modules"]
}
